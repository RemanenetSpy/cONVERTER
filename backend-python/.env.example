# Environment Configuration for File Converter Backend

# Server Configuration
PORT=5000
ENVIRONMENT=production
FLASK_DEBUG=false

# CORS Configuration
# For production, set to your frontend URL (comma-separated for multiple)
# Example: ALLOWED_ORIGINS=https://yourapp.vercel.app,https://www.yourapp.com
ALLOWED_ORIGINS=*

# Rate Limiting
DAILY_QUOTA_BYTES=209715200  # 200MB in bytes

# File Upload Configuration
MAX_CONTENT_LENGTH=524288000  # 500MB in bytes

# Logging
LOG_LEVEL=INFO
